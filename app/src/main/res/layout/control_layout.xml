<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="24dp">

    <!-- Simulation / Dev Mode Buttons (Chips style) -->
    <Switch
        android:id="@+id/switch_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리자 모드"
        android:textColor="@color/textSecondary"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/icon_restroom"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_restroom"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/switch_mode"
        app:layout_constraintRight_toRightOf="parent" />

    <HorizontalScrollView
        android:id="@+id/sim_container_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_mode">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/btnSimOccupied"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Occupied"
                android:textSize="10sp"
                android:backgroundTint="#FF6B6B"
                android:textColor="@color/textWhite"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSimEmpty"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Empty"
                android:textSize="10sp"
                android:backgroundTint="#4ECDC4"
                android:textColor="@color/textWhite"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSimSuspicious"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Suspicious"
                android:textSize="10sp"
                android:backgroundTint="#FFD93D"
                android:textColor="@color/textPrimary" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/conn_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장치 연결 대기 중..."
        android:textColor="@color/textSecondary"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sim_container_scroll" />

    <!-- Main Status Indicator (Circular) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- Outer Ring/Shadow (Optional) -->
        <View
            android:id="@+id/status_circle_bg"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@drawable/bg_circle_status"
            android:elevation="10dp"
            android:backgroundTint="@color/status_empty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_light_status"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_light_on"
            android:visibility="gone"
            android:layout_marginBottom="0dp"
            android:elevation="15dp"
            app:layout_constraintBottom_toTopOf="@+id/status_circle_bg"
            app:layout_constraintLeft_toLeftOf="@id/status_circle_bg"
            app:layout_constraintRight_toRightOf="@id/status_circle_bg" />

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_status_empty"
            android:tint="@color/textWhite"
            android:elevation="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/status_text_display"
            app:layout_constraintLeft_toLeftOf="@id/status_circle_bg"
            app:layout_constraintRight_toRightOf="@id/status_circle_bg"
            app:layout_constraintTop_toTopOf="@id/status_circle_bg"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/status_text_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빈 좌석"
            android:textColor="@color/textWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@id/status_circle_bg"
            app:layout_constraintLeft_toLeftOf="@id/status_circle_bg"
            app:layout_constraintRight_toRightOf="@id/status_circle_bg"
            app:layout_constraintTop_toBottomOf="@+id/status_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_focus_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 집중 시간: 00:00:00"
        android:textColor="@color/textPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/status_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_set_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ 목표 시간 설정 ]"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_focus_timer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.widget.Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_button_primary"
        android:text="수동 리셋 (Reset)"
        android:textColor="@color/textWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>